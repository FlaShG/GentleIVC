#declare porcelain =
  texture {
      pigment { rgb 1.3 }
      finish {
         reflection {0.05, 0.5 fresnel on } conserve_energy
         specular 1 roughness 0.005
         diffuse 0.5
      }
   }      




#declare border2 =
object{
 isosurface { //-------------------------------------------------------------

  function{
 /*   f_flange_cover(
       x,y,z,
       0.04, // spikiness,
       10,    // inverse size,
       0.53,  // flange, (1 = off)
       1      // threshold
       )    */
       (x+y)*z*z*z+1                                                                   
  }
  open          
 contained_by {sphere {0,2.5}}
 threshold 10
 accuracy 0.001
 max_gradient 1
 
 texture{ pigment{ color rgb <0.9,0.4,0.7>} 
          finish { specular 0.1 roughness 0.1 phong 0.2 }
        }
 rotate<45,45,0>
 scale 1.0
 translate< 0,1.3,0>
} // end of isosurface -------------------------------------------------------

}      




#declare torusHight = 0.09;
#declare torusRadius = 1;
                
#declare border =
merge
{
 torus{
 torusRadius,torusHight         
        pigment{ color rgb<1,0.7,0>}

        scale <1,1,1> rotate<0,0,0> translate<0,torusHight,0>
      } // end of torus  -------------------------------
  cylinder{
     0,torusHight/2*y,1
     
     pigment{color Green}
  }
  
  texture { T_Gold_1B }                  

}                
#declare innerSpace = 
object
{
        cylinder
        {
                torusHight/2 * y,
                torusHight/2 * y + x,                        
                2
        }
                
     
}

                
